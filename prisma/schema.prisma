// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === Modèles ===
// Tu peux adapter les champs selon ton besoin.
// Voici une base adaptée à ton application "EBF-Bke" pour gérer les requêtes des clients.

model Customer {
  id          Int        @id @default(autoincrement())
  name        String
  phone       String
  neighborhood String?
  position    String?
  requests    Request[]
  createdAt   DateTime   @default(now())
}

model Request {
  id            Int        @id @default(autoincrement())
  description   String
  inputType     String
  audioUrl      String?
  latitude      Float?
  longitude     Float?
  customerId    Int
  customer      Customer   @relation(fields: [customerId], references: [id])
  createdAt     DateTime   @default(now())
}
